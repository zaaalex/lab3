<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lab3.eventreminder">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryBirthday">

        <activity
            android:name="com.example.lab3.eventreminder.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MemoryBirthday.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.lab3.eventreminder.ui.profile.AboutActivity"
            android:label="@string/aboutLabel"
            android:parentActivityName="com.example.lab3.eventreminder.ui.profile.ProfileActivity"/>

        <activity
            android:name="com.example.lab3.eventreminder.ui.profile.SettingsActivity"
            android:label="@string/settingsLabel"
            android:parentActivityName="com.example.lab3.eventreminder.ui.profile.ProfileActivity"/>

        <activity
            android:name="com.example.lab3.eventreminder.ui.profile.ProfileActivity"
            android:theme="@style/Theme.MemoryBirthday.NoActionBar"/>
    </application>

</manifest>