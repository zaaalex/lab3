<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/borderPaddingMedium">

    <ImageView
        android:id="@+id/profileSettingsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings_24"
        app:layout_constraintBottom_toBottomOf="@+id/profileSettingsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileSettingsText"/>

    <TextView
        android:id="@+id/profileSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textPaddingMedium"
        android:layout_marginBottom="@dimen/textPaddingMedium"
        android:text="@string/settingsLabel"
        android:textSize="@dimen/textSizeMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/profileSettingsIcon"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profileAboutIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info_24"
        app:layout_constraintBottom_toBottomOf="@+id/profileAboutText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileAboutText"/>

    <TextView
        android:id="@+id/profileAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textPaddingMedium"
        android:layout_marginBottom="@dimen/textPaddingMedium"
        android:text="@string/aboutLabel"
        android:textSize="@dimen/textSizeMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/profileSettingsText"
        app:layout_constraintTop_toBottomOf="@+id/profileSettingsText"/>

    <ImageView
        android:id="@+id/profileShareIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_24"
        app:layout_constraintBottom_toBottomOf="@+id/profileShareText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileShareText"/>

    <TextView
        android:id="@+id/profileShareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textPaddingMedium"
        android:layout_marginBottom="@dimen/textPaddingMedium"
        android:text="@string/shareFriends"
        android:textSize="@dimen/textSizeMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/profileAboutText"
        app:layout_constraintTop_toBottomOf="@+id/profileAboutText"/>

</androidx.constraintlayout.widget.ConstraintLayout>